sub new {my $class=shift;bless{@_},$class}

sub foo {@_>1?do{$_[0]->{foo}=$_[1]}:$[0]->{foo}}
sub bar {@_>1?do{$_[0]->{foo}=$_[1]}:$[0]->{foo}}
